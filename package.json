{
  "name": "newwebpack5cli",
  "version": "1.0.0",
  "description": "基于webpack5，ts，vue3,element-plus的脚手架",
  "main": "index.js",
  "homepage": "https://${github username}.github.io/${repo name}",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "cross-env NODE_ENV='production' webpack --config build/webpack.prod.js",
    "build:report": "cross-env analyzer='true' NODE_ENV='production' webpack --config build/webpack.prod.js",
    "serve": "cross-env NODE_ENV=development webpack server --config build/webpack.dev.js",
    "dev": "cross-env NODE_ENV='development' webpack --config build/webpack.dev.js",
    "clean": "npx rimraf node_modules",
    "lint": "npm run lint-eslint",
    "lint-eslint": "npx eslint src --ext .js,.ts,.tsx,.vue",
    "fix": "eslint --fix --ext .js,.jsx,.json,.vue",
    "prepare": "husky install"
  },
  "author": "zwj",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@vue/compiler-sfc": "^3.2.26",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.3",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.6.0",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "eslint-webpack-plugin": "^3.1.1",
    "html-loader": "^3.0.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "mini-css-extract-plugin": "^2.5.3",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.4.1",
    "postcss-px-to-viewport": "^1.1.1",
    "postcss-sass": "^0.5.0",
    "sass": "^1.45.1",
    "sass-loader": "^12.4.0",
    "sass-resources-loader": "^2.2.4",
    "style-loader": "^3.3.1",
    "stylelint": "^14.8.2",
    "stylelint-config-standard": "^25.0.0",
    "svg-sprite-loader": "^6.0.11",
    "typescript": "^4.5.4",
    "vue": "^3.2.26",
    "vue-eslint-parser": "^8.0.1",
    "vue-loader": "^16.8.3",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.7",
    "@vue/compat": "^3.2.26",
    "element-plus": "^1.2.0-beta.6",
    "speed-measure-webpack-plugin": "^1.5.0",
    "vue-router": "^4.0.12",
    "vuex": "^4.0"
  },
  "prettier": {
    "eslintIntegration": true,
    "stylelintIntegration": true,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*.{css,scss}": "stylelint --custom-syntax postcss-sass --fix",
    "src/**/*.{js,vue,ts,tsx,jsx}": [
      "eslint --fix --ext .js,.vue",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
 }
}
